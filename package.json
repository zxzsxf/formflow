{
  "name": "formflow",
  "version": "1.0.0",
  "description": "FormFlow - 表单流程管理工具",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "clean:dist": "lerna run clean",
    "clean:all": "lerna run clean && rimraf node_modules packages/*/node_modules",
    "clean:yarn": "lerna run clean && rimraf node_modules && rimraf .yarn && rimraf .pnp.cjs && rimraf .pnp.loader.mjs && rimraf packages/*/.yarn",
    "clean:dist:all": "rimraf packages/*/dist",
    "clean:modules:all": "rimraf node_modules && rimraf .yarn && rimraf packages/*/node_modules",
    "clean:full": "rimraf node_modules packages/*/node_modules packages/*/dist .yarn/cache",
    "build": "lerna run build",
    "dev": "lerna run dev",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "lerna": "^7.1.4",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.4",
    "tslib": "^2.8.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "18.17.1",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/formflow.git"
  },
  "keywords": [
    "form",
    "workflow",
    "formflow",
    "cli",
    "components"
  ],
  "author": "Your Name",
  "license": "MIT"
}
